/*
 * FILE: main.mac
 * This is the main script that USES the my_point class.
*/

/* 1. Load the my_point class definition and implementation */
load("my_point.mac");

/* 2. Now, use the class and its operators as if they were built-in */
p1: new(my_point);
p1@x: 10;
p1@y: 20;

p2: new(my_point);
p2@x: 5;
p2@y: 8;

/* Use the '++' operator defined in my_point.mac */
p3: p1 ++ p2;

/* 3. Display the results */
print("Point 1:", p1);
print("Point 2:", p2);
print("Point 3 (p1 ++ p2):", p3);
